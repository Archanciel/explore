<Root>:
    rvMain: recycleView_main_drives_list
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            size_hint_y: 0.06
            Button:
                text: 'Load'
                on_release: root.show_load()
        BoxLayout:
            size: root.size
            pos: root.pos
            orientation: "vertical"

            BoxLayout:
                id: boxlayout__main_recycleview
                size_hint_y: 0.05
#            height: "520dp"


                RecycleView:
                    id: recycleView_main_drives_list
                    scroll_y: 0 # forces scrolling to list bottom after adding an entry
                    effect_cls: "ScrollEffect" # prevents overscrolling
                    viewclass: 'SelectableLabel'

                    SelectableRecycleBoxLayout:
                        default_size: None, dp(15) # height of list line
                        default_size_hint: 1, None
                        size_hint_y: None
                        spacing: 0.5
                        orientation: 'vertical'
                        multiselect: False
                        touch_multiselect: False

<LoadDialog>:
    drivesListRV: recycleView_drives_list
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        BoxLayout:
            id: boxlayout_recycleview
            size_hint_y: 0.05
#            height: "520dp"


            RecycleView:
                id: recycleView_drives_list
                scroll_y: 0 # forces scrolling to list bottom after adding an entry
                effect_cls: "ScrollEffect" # prevents overscrolling
                viewclass: 'SelectableLabel'

                SelectableRecycleBoxLayout:
                    default_size: None, dp(15) # height of list line
                    default_size_hint: 1, None
                    size_hint_y: None
                    spacing: 0.5
                    orientation: 'vertical'
                    multiselect: False
                    touch_multiselect: False


<SelectableLabel>:
	# Draw a background to indicate selection
	canvas.before:
		Color:
			rgba: (1, 0, 0, 1) if self.selected else (.0, 0.9, .1, .3)
		Rectangle:
			pos: self.pos
			size: self.size
		Color:
			rgba: (0, 0.9, .1, .3)
		Rectangle:
			pos: self.pos
			size: self.size
