DropDownTrialGUY:

<CustomDropDown>
    gridlayoutSecondItem: gridlayout_secondItemButton
    secondItemButton: second_item_button
    Button:
        text: 'My first Item'
        size_hint_y: None
        height: '28dp'
        on_release: root.firstItem()
    GridLayout: # enable to hide or display 'My second Item' menu item
        id: gridlayout_secondItemButton
		cols: 1
        size_hint_y: None
        height: "0dp"
        Button:
            id: second_item_button
            text: 'My second Item'
            size_hint_y: None
            height: '28dp'
            on_release: root.secondItem()
    Button:
        text: 'My third Item'
        size_hint_y: None
        height: '28dp'
        on_release: root.thirdItem()

<DropDownTrialGUY>:
    orientation: "vertical"
    padding: 10
    spacing: 10
                      
    BoxLayout:
        size_hint_y: None
        height: "28dp"
        Button:
            id: toggleHistoryBtn
            text: "History"
            size_hint_x: 15
        Button:
            id: deleteBtn
            text: "Delete"
            size_hint_x: 15
        Button:
            id: replaceBtn
            text: "Replace"
            size_hint_x: 15
        Button:
            id: replayAllBtn
            text: "Replay All"
            size_hint_x: 15
        Button:
            id: menuBtn
            text: "..."
            size_hint_x: 15
            on_release: root.openMenu(self)

    TextInput:
        id: readOnlyLog
        size_hint_y: 1
        readonly: True
