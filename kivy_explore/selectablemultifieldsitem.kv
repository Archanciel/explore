<SelectableMultiFieldsItem>: # class implemented in audiodownloadergui.py
    itemLabel: item_label
    itemGridLayoutCkeckbox: item_gridlayout_ckeckbox
    itemGridLayoutEmpty: item_gridlayout_empty
	cols: 2
	rows: 1
	text: ''

	# add selection background
	canvas.before:
		Color:
			rgba: (1, 0, 0, 1) if self.selected else (.0, 0.9, .1, .3)
		Rectangle:
			pos: self.pos
			size: self.size

	Label:
	    id: item_label
		size_hint_x: 0.9
		text: root.text
		markup: True
	GridLayout: # enable to hide or display the contained ckeckbox
		id: item_gridlayout_ckeckbox
		cols: 1
		size_hint_x: 0.1
		CheckBox:
			id: download_chkbox
			active: True
			on_press: root.toggleCheckbox(self, self.active)
	GridLayout: # enable to hide or display the contained ckeckbox
		id: item_gridlayout_empty
		cols: 1
		size_hint_x: 0
		Label:
	    	text: '  '
