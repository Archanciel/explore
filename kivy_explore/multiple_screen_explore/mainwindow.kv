<MainWindow>:
	name: "main"
	password: passw

	GridLayout:
		cols:1

		GridLayout:
			cols: 2

			Label:
				text: "Password: "

			TextInput:
				id: passw
				multiline: False
				text: 'tim'

		GridLayout:
			cols: 2
            Button:
                text: "Switch to second screen"
                on_release: root.switchToSecondScreen()
            Button:
                text: "Submit"
                on_release:
                    app.root.current = "second" if passw.text == "tim" else "main"
                    root.manager.transition.direction = "left"

