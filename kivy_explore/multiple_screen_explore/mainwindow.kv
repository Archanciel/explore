<MainWindow>:
	name: "main"

	GridLayout:
		cols:1

		GridLayout:
			cols: 2

			Label:
				text: "Password: "

			TextInput:
				id: passw
				multiline: False
				text: 'tim'

		Button:
			text: "Submit"
			on_release:
				app.root.current = "second" if passw.text == "tim" else "main"
				root.manager.transition.direction = "left"
