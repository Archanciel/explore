<KivyCustomClassSpinner>: # inherits from KivyCustomClassButtons
	id: custom_class_spinner_instance # the instance type will be the
                                      # lowest sub class of KivyCustomClassSpinner
	orientation: 'vertical'
	Spinner:
    	id: spinner_instance
        size_hint_y: 0.2
		text: 'Select'
		values: ('Spinner One', 'Spinner Two')
		on_text: custom_class_spinner_instance.spinnerValueSet()
