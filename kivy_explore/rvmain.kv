#: import main rvmain

<KivyListView>:
    orientation: 'vertical'
    recycleV: recycleView_list
    deleteButton: delete_Button
    size_hint_y: None

    RecycleView:
        id: recycleView_list

        viewclass: 'SelectableLabel'

        SelectableRecycleBoxLayout:
            default_size: None, dp(26) # height of list line
            default_size_hint: 1, None
            size_hint_y: 10
            height: self.minimum_height
            orientation: 'vertical'
            multiselect: False
            touch_multiselect: False

    BoxLayout:
        size_hint_y: 1
        Button:
            id: delete_Button
            text: "Delete"
            size_hint_x: 15
            disabled: False
            on_press: root.deleteItem()

<SelectableLabel>:
    # Draw a background to indicate selection
    canvas.before:
        Color:
            rgba: (.0, 0.9, .1, .3) if self.selected else (0, 0, 0, 1)
        Rectangle:
            pos: self.pos
            size: self.size
